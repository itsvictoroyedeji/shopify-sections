{% style %}
  .section-{{ section.id }}-padding {
      padding-top: 69px;
      padding-bottom: 0px;
      /* background-color: #f4f8fb; */
    }
    .img-width-only{
      width: 85%;
      display: flex;
      justify-content: center;
      margin: auto;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: 92px;
        padding-bottom: 0px;
      }
    }

    @media screen and (max-width: 768px) {
      .section-{{ section.id }}-padding {
        padding-top: 84px;
        padding-bottom: 76px;
      }
      .img-width-only{
        width:100%;
      }
    }
{% endstyle %}

<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} custom-banner-content-main">
  <div class="page-width">
    <div class="only-img-main">
      {% if section.settings.image %}
        {{
          section.settings.image
          | image_url: width: 1500, height: 530
          | image_tag:
            alt: 'First image',
            class: 'header__heading-logo motion-reduce',
            loading: 'lazy',
            sizes: '(min-width: 1400px) 1300px, (min-width: 750px) calc((100vw - 130px) / 1), calc((100vw - 50px) / 1)'
        }}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Only",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-2"
    }
  ],
 "presets": [
   {
     "name": "Image Only",
     "category": "Custom"
   }
 ]
}
{% endschema %}
